<% include partials/head %>
	<body>
			<nav class="navbar navbar-default">
			  <div class="container">
				   <ul class="nav nav-pills">
				  		<li role="presentation" class="active"><a href="#">Inicio</a></li>
				  		<li role="presentation"><a href="#">Algo</a></li>
				  		<li role="presentation"><a href="#">Contacto</a></li>
					</ul>
			  </div>
			</nav>

			<div class="col-md-12 text-center">
					<img alt="" src="http://flybynet.net/publico/template/logo/flybynet-logotipo-4-2015-a.png">
				</div>
			<div class="jumbotron container text-center">

				<h2>Sistema en NodeJS.</h2>
				<p class="text-center">Simple Login y registro en NodeJS</p>
				<p class="text-center"><strong>por Fernando 2017</strong></p>
				<a href="/login" class="btn btn-default"><span class="fa fa-sign-in"> Ingresar al Sistema</span></a>
				<a href="/registro" class="btn btn-default"><span class="fa fa-user"> Registrarse al Sistema</span></a>
			</div>


			<div class="container">
			<div class="row">
			<div class="col-md-12">
			<div class="page-header">
      		<h3>Peliculas // Series <small> Subtext for header</small></h3>
    		</div>

			<% if(persons.length>0){%>

			<% for(var i=0; i<persons.length; i++) {%>
			<div class="col-md-4">
			<figure class="snip1543">
			  <img src="<%= persons[i].imagen %>" />
			  <figcaption>
			    <h3><%= persons[i].nombre %></h3>
			    <p></p>
			    <p><strong><%= persons[i].tipo %></strong></p>
			    <br>
			    <p><%= persons[i].apellido %></p>
			  </figcaption>
			  <a href="#"></a>
			</figure>
			</div>
			<% } %>

			<%} else {%>
			<p class="alert alert-warning">No hay contactos</p>
			<% } %>
			</div>
			</div>
			</div>
			
	
	</body>
</html>
